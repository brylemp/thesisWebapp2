    <nav class="nav nav-pills nav-justified">
        <a class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" href="#pills-home">Daily Earnings</a>
        <a class="nav-link" id="pills-transactions-tab" data-bs-toggle="pill" href="#pills-transactions">Transactions</a>
    </nav>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <% for(transaction of driverSelected.transactionsOnDate){ %>
                <%= `${transaction.date.toLocaleDateString()} -> ${transaction.balanceOnDate}` %>
                <%- '<br>' %>  
            <% } %>  
        </div>
        <div class="tab-pane" id="pills-transactions" role="tabpanel" aria-labelledby="pills-transactions-tab">
            <% for(transaction of driverSelected.transactions){ %>
                <%= `${transaction._id} == ${transaction.date.toLocaleString()}` %> 
                <%- '<br>' %> 
            <% } %>  
        </div>
    </div>
    
